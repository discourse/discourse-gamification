{{#if model.gamification_score}}
  <dl>
    <dt class="gamification-score">
      {{i18n "gamification.score"}}
      {{#if site.default_gamification_leaderboard_id}}
        {{#link-to
          "gamificationLeaderboard.byName"
          site.default_gamification_leaderboard_id
        }}
          {{fullnumber model.gamification_score}}
        {{/link-to}}
      {{else}}
        {{fullnumber model.gamification_score}}
      {{/if}}
    </dt>
  </dl>
{{/if}}